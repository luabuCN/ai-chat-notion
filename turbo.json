{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "dist/**"],
      "env": ["NODE_ENV", "POSTGRES_URL", "AUTH_SECRET"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^build"]
    },
    "db:generate": {
      "cache": false
    },
    "db:migrate": {
      "cache": false
    },
    "db:push": {
      "cache": false
    },
    "@repo/collab-server#dev": {
      "dependsOn": ["@repo/database#db:generate"],
      "cache": false,
      "persistent": true,
      "env": ["POSTGRES_URL", "AUTH_SECRET", "JWT_SECRET", "COLLAB_SERVER_PORT"]
    },
    "@repo/collab-server#build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"],
      "env": ["NODE_ENV", "POSTGRES_URL", "AUTH_SECRET"]
    },
    "migrate:yjs": {
      "cache": false,
      "env": ["POSTGRES_URL"]
    }
  }
}

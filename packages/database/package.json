{
  "name": "@repo/database",
  "version": "1.0.0",
  "private": true,
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./client": "./src/client.ts"
  },
  "scripts": {
    "build": "prisma generate",
    "db:generate": "dotenv -e ../../.env.local -- prisma generate",
    "db:migrate": "dotenv -e ../../.env.local -- prisma migrate dev",
    "db:push": "dotenv -e ../../.env.local -- prisma db push --accept-data-loss",
    "db:pull": "dotenv -e ../../.env.local -- prisma db pull",
    "db:studio": "dotenv -e ../../.env.local -- prisma studio",
    "db:reset": "dotenv -e ../../.env.local -- prisma migrate reset",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@prisma/client": "6",
    "ai": "5.0.28",
    "bcrypt-ts": "^5.0.2",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "tailwind-merge": "^2.5.2",
    "tokenlens": "1.3.0"
  },
  "devDependencies": {
    "prisma": "6",
    "typescript": "^5.6.3"
  },
  "turbo": {
    "extends": [
      "//"
    ],
    "tasks": {
      "build": {
        "outputs": []
      }
    }
  }
}
